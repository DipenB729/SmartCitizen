@using Microsoft.AspNetCore.Identity
@model SmartCitizen.Models.Complaint

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Complaint Details</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Upsert">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="UserId" type="hidden" value="@Model.UserId" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control" value="@Model.Title" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" readonly>@Model.Description</textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label fw-bold">Location</label>
                            <input asp-for="Location" class="form-control" value="@Model.Location" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold">Update Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="In-Progress">In Progress</option>
                                <option value="Resolved">Resolved</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImagePath" class="form-label fw-bold">Complaint Image</label>
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <div class="text-center mb-3">
                                    <img src="@Model.ImagePath" alt="Complaint Image" class="img-fluid rounded shadow-lg" style="max-width: 100%; height: auto;" />
                                </div>
                            }
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4 py-2">
                                <i class="fas fa-save"></i> Update Status
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
