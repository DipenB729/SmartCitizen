@{
    ViewData["Title"] = "User Dashboard";
}

<div class="container-fluid">
    <h2 class="mt-3">Welcome to SmartCitizen</h2>
    <p class="lead">Submit complaints and requests for a better city.</p>

    <div class="row">
        <!-- New Complaint Card -->
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title"><i class="bi bi-pencil-square"></i> New Complaint</h5>
                        <p class="card-text">Report an issue that needs attention.</p>
                    </div>
                    <a href="@Url.Action("Upsert", "Complaint")" class="btn btn-light">create new</a>
                </div>
            </div>
        </div>

        <!-- Track Complaints Card -->
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title"><i class="bi bi-list-check"></i> Track Complaints</h5>
                        <p class="card-text">View the status of your submitted requests.</p>
                    </div>
                    <a href="@Url.Action("Index", "Complaint")" class="btn btn-light">Track Now</a>
                </div>
            </div>
        </div>

        <!-- Profile Settings Card -->
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="card bg-warning text-white shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title"><i class="bi bi-person-circle"></i> Profile Settings</h5>
                        <p class="card-text">Update your account details.</p>
                    </div>
                    <a href="@Url.Action("EditProfile", "User")" class="btn btn-light">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Complaint History Section -->
    <div class="row mt-4">
        <div class="col-lg-8">
            <h4>Recent Complaints</h4>
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Date Submitted</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Broken Streetlight</td>
                        <td><span class="badge bg-warning">Pending</span></td>
                        <td>Feb 20, 2025</td>
                        <td><a href="#" class="btn btn-info btn-sm">View</a></td>
                    </tr>
                    <tr>
                        <td>Water Leakage</td>
                        <td><span class="badge bg-success">Resolved</span></td>
                        <td>Feb 18, 2025</td>
                        <td><a href="#" class="btn btn-info btn-sm">View</a></td>
                    </tr>
                    <tr>
                        <td>Road Damage</td>
                        <td><span class="badge bg-danger">Rejected</span></td>
                        <td>Feb 15, 2025</td>
                        <td><a href="#" class="btn btn-info btn-sm">View</a></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Notifications Section -->
        <div class="col-lg-4">
            <h4>Notifications</h4>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Your complaint <b>Water Leakage</b> is now <span class="badge bg-success">Resolved</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Your complaint <b>Broken Streetlight</b> is being <span class="badge bg-warning">Reviewed</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    A new update is available for the SmartCitizen platform.
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- New Complaint Modal -->
<div class="modal fade" id="complaintModal" tabindex="-1" aria-labelledby="complaintModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="complaintModalLabel">New Complaint</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="Complaint" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="Title" class="form-label">Complaint Title</label>
                        <input type="text" class="form-control" id="Title" name="Title" required>
                    </div>
                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea class="form-control" id="Description" name="Description" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="Location" class="form-label">Location</label>
                        <input type="text" class="form-control" id="Location" name="Location" required>
                    </div>
                    <div class="mb-3">
                        <label for="imageFile" class="form-label">Upload Image</label>
                        <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Complaint</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap and Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
