@{
    ViewData["Title"] = "About Us";
}

<!-- Reference to Bootstrap CSS -->
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">SmartCitizen</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact Us</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("About", "Home")">About Us</a>
            </li>
        </ul>
    </div>
</nav>

<!-- About Us Content -->
<div class="container mt-5">

    <!-- Page Header -->
    <h2 class="text-center text-dark display-4">About SmartCitizen</h2>
    <p class="lead text-center text-muted">Empowering citizens for a better and smarter city.</p>

    <!-- Mission and Vision -->
    <div class="row mt-5">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm rounded">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title">Our Mission</h5>
                </div>
                <div class="card-body">
                    <p>Our mission is to create a platform that allows citizens to report issues like potholes, electricity problems, and broken infrastructure, directly connecting them to government authorities for swift resolution.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm rounded">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title">Our Vision</h5>
                </div>
                <div class="card-body">
                    <p>We envision a city where the government works seamlessly with its citizens, using technology to address urban issues efficiently and transparently, improving the quality of life for everyone.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Goals Section -->
    <div class="row mt-4">
        <div class="col-md-12">
            <h4 class="text-primary">Our Goals</h4>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Empower citizens to actively participate in making their cities better.</li>
                <li class="list-group-item">Provide an easy-to-use platform for submitting and tracking complaints.</li>
                <li class="list-group-item">Help government authorities manage and resolve urban issues efficiently.</li>
                <li class="list-group-item">Increase transparency and accountability in city administration.</li>
            </ul>
        </div>
    </div>

    <!-- Services Section -->
    <div class="row mt-4">
        <div class="col-md-12">
            <h4 class="text-primary">Our Services</h4>
            <p>SmartCitizen offers a variety of services to bridge the gap between citizens and government authorities:</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Complaint Submission:</strong> Report issues like road damage, power outages, etc.</li>
                <li class="list-group-item"><strong>Complaint Tracking:</strong> Track your complaint's status and get real-time updates.</li>
                <li class="list-group-item"><strong>Service Provider Management:</strong> Authorities assign complaints to relevant service providers and track their progress.</li>
                <li class="list-group-item"><strong>Data Reporting:</strong> Authorities can generate reports for ongoing issues and tasks.</li>
            </ul>
        </div>
    </div>

    <!-- Contact Information Section -->
    <div class="row mt-4">
        <div class="col-md-12">
            <h4 class="text-primary">Contact Us</h4>
            <p>If you have any questions or would like to know more about SmartCitizen, feel free to reach out:</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Email:</strong> support@smartcitizen.com</li>
                <li class="list-group-item"><strong>Phone:</strong> +977 1 2345678</li>
                <li class="list-group-item"><strong>Address:</strong> 123, City Center, Kathmandu, Nepal</li>
            </ul>
        </div>
    </div>

</div>

<!-- Custom Internal CSS -->
<style>
    /* Customize navbar */
    .navbar {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    /* Center content */
    .container {
        max-width: 1200px;
        margin-top: 30px;
    }

    h2, h4 {
        color: #003366;
        font-family: 'Arial', sans-serif;
    }

    p {
        font-size: 1.1rem;
        color: #555;
    }

    /* Card styles */
    .card-header {
        font-weight: bold;
    }

    .list-group-item {
        font-size: 1.1rem;
    }

    .card-body {
        font-size: 1rem;
    }

    /* Hover effect on list items */
    .list-group-item {
        background-color: #f8f9fa;
    }

        .list-group-item:hover {
            background-color: #f1f1f1;
        }

    /* Container spacing */
    .container.mt-5 {
        padding-bottom: 50px;
    }
</style>
